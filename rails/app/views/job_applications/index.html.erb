<%= content_for :title, "My Job Applications" %>

<div class="w-full">
  <div class="flex justify-between items-center mb-4">
    <h1 class="font-bold text-2xl">Job Applications</h1>
    <div class="flex direction-row">
      <%= link_to new_job_application_path, class: " rounded-lg py-1.5 px-2 bg-ptpurple text-white block font-medium" do %>
        <%= inline_svg_tag("icons/plus.svg", style: "max-height: 30px; max-width: 30px; color: white") %>
      <% end %>
    </div>
  </div>

  <div id="job_applications" class="min-w-full">
    <%= render @job_applications %>
  </div>
</div>

